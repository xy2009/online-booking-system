{
  "compilerOptions": {
    "lib": [
      "ESNext"
    ],
    "strict": true,
    "module": "commonjs",
    "removeComments": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": true,
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "target": "ES2017",
    "rootDir": "./src",
    "outDir": "dist"
  },
  "include": [
    "src/**/*.ts"
, "src/tests/branch.test.ts"  ],
  "exclude": [
    "node_modules/**/*",
    "_warmup/**/*",
    ".vscode/**/*",
    "**/*.test.ts"
  ],
  "typeRoots": [
    "./src/types",
    "./node_modules/@types"
  ]
}
